{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AppConfiguration": {
    "Endpoint": ""
  },
  "AzureCommunicationServices": {
    "Endpoint": ""
  },
  "Email": {
    "TestRecipients": "ops@example.com",
    "RefreshIntervalMinutes": 5,
    "SenderAddress": "",
    "DeliveryMode": "Acs"
  },
  "RateLimit": {
    "WindowDurationMinutes": 1,
    "Operator": {
      "AlertCreation": 10
    },
    "Approver": {
      "Approvals": 30
    }
  },
  "Drasi": {
    "HealthEndpoint": "http://drasi-api:8080/health",
    "HealthCheckCacheSeconds": 5,
    "HealthCheckTimeoutSeconds": 2,
    "FailOpen": false
  },
  "Auth": {
    "AllowAnonymous": false
  },
  "Cors": {
    "AllowedOrigins": "http://localhost:5173,http://localhost:3000"
  },
  "Maps": {
    "AuthMode": "sas",
    "AadClientId": "",
    "AadAppId": "",
    "AadTenantId": "",
    "AccountName": ""
  },
  "FeatureFlags": {
    "EnableMapEditor": true
  },
  "FeatureManagement": {
    "EnableGeographicCorrelation": true,
    "EnableSLABreachDetection": true,
    "EnableApprovalTimeouts": true,
    "RequireDrasiHealthCheck": true,
    "EnableRegionalHotspotDetection": true,
    "EnableSeverityEscalation": true,
    "EnableExpiryWarnings": true,
    "EnableRateSpikeDetection": true
  }
}
