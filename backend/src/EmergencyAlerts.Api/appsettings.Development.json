{
  \"Logging\": {
    \"LogLevel\": {
      \"Default\": \"Debug\",
      \"System\": \"Information\",
      \"Microsoft\": \"Information\",
      \"Microsoft.AspNetCore\": \"Information\"
    }
  },
  \"Email\": {
    \"TestRecipients\": \"dev@localhost,test@localhost\",
    \"SenderAddress\": \"alerts@local.test\",
    \"DeliveryMode\": \"LogOnly\"
  },
  \"AzureCommunicationServices\": {
    \"Endpoint\": \"https://localhost\"
  },
  \"RateLimit\": {
    \"WindowDurationMinutes\": 1,
    \"Operator\": {
      \"AlertCreation\": 100
    },
    \"Approver\": {
      \"Approvals\": 100
    }
  },
  \"Drasi\": {
    \"HealthEndpoint\": \"http://localhost:8080/health\",
    \"HealthCheckCacheSeconds\": 10,
    \"HealthCheckTimeoutSeconds\": 5,
    \"FailOpen\": true
  },
  \"Cors\": {
    \"AllowedOrigins\": \"http://localhost:5173,http://localhost:3000,http://localhost:4200\"
  },
  \"FeatureManagement\": {
    \"EnableGeographicCorrelation\": true,
    \"EnableSLABreachDetection\": true,
    \"EnableApprovalTimeouts\": true,
    \"RequireDrasiHealthCheck\": false,
    \"EnableRegionalHotspotDetection\": true,
    \"EnableSeverityEscalation\": true,
    \"EnableExpiryWarnings\": true,
    \"EnableRateSpikeDetection\": true
  }
}
